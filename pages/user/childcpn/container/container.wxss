/* pages/user/childcpn/container/container.wxss */
@import '/styles/iconfont.wxss';
.container{
  position: relative;
}
.container-info{
  position: absolute;
  left: 50%;
  top: -40rpx;
  transform: translate(-50%);
  width: 90%;
  padding-bottom: 120rpx;
}
.container-other1{
  background-color: #fff;
  display: flex;
  text-align: center;
  padding: 10rpx 0;
}
.container-other1 .item{
  flex: 1;
}
.container-other2{
  background-color: #fff;
  margin-top: 20rpx;
}
.container-order{
  padding: 15rpx;
  border-bottom: 1rpx solid #ccc;
}
.order{
  display: flex;
  text-align: center;
  padding: 10rpx 0;
}
.order-item{
  flex: 1;
}
.iconfont{
  color: var(--backgroundColor);
  font-size: 40rpx;
}
.container-adder{
  padding: 15rpx;
  background-color: #fff;
  margin: 20rpx 0;
}
.font{
  padding: 15rpx;
  background-color: #fff;
}
.container-other3{
  display: flex;
  justify-content: space-between;
}
.container-other4{
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.container-other6{
  margin-top: 20rpx;
}