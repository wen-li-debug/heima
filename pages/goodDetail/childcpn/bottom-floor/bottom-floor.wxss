/* pages/goodDetail/childcpn/bottom-floor/bottom-floor.wxss */
@import '/styles/iconfont.wxss';
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  display: flex;
  height: 90rpx;
}
.floor-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.floor-item button{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.floor-cart, .floor-buy{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 700;
}
.floor-cart{
  flex: 2;
  background-color: #ffa500;
}
.floor-buy{
  flex: 2;
  background-color: #eb4500;
}
