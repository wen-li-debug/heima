/* pages/search/search.wxss */
page{
  background-color: #ededed;
}
.search{
  padding: 20rpx;
}
.search-header {
  display: flex;
  height: 60rpx;
  align-items: center;
}
.search-header .input{
  background-color: #fff;
  padding: 0 20rpx;
  height: 100%;
  flex: 1;
  
}
.search-header .btn {
  background-color: #fff;
  width: 110rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  border-radius: 10rpx;
}
.search-content .item{
  background-color: #fff;
  margin-bottom: 5rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.search-content .item:nth-child(1){
  margin-top: 20rpx;
}